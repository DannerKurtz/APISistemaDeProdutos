generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id          String      @id @default(uuid())
  nome        String
  senha    String
  permissionId String?
  permission  Permission? @relation(fields: [permissionId], references: [id])
  createAt DateTime @default(now())
}

model Permission {
  id          String      @id @default(uuid())
  nome        String      @unique
  descricao   String?
  nivel       Int?
  usuarios    Usuario[]
  createAt DateTime @default(now())
}


model Clientes {
  id                   String   @id @default(uuid())
  nome                 String
  cep                  String   
  cidade               String
  cpf_cnpj             String   
  inscricao_estadual   String   
  endereco             String
  bairro               String
  numero               String   
  nome_do_contato      String
  telefone             String   
  celular              String   
  email                String
  createAt DateTime @default(now())
}
